{
  "name": "resilient-http",
  "version": "1.0.0",
  "description": "Framework-agnostic HTTP resilience library with retry, circuit breaker, and error extraction. Works with Node.js, Bun, and browsers.",
  "author": "valianx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/valianx/resilient-http.git"
  },
  "bugs": {
    "url": "https://github.com/valianx/resilient-http/issues"
  },
  "homepage": "https://github.com/valianx/resilient-http#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./retry": {
      "bun": "./src/retry/index.ts",
      "types": "./dist/retry/index.d.ts",
      "import": "./dist/retry/index.js",
      "require": "./dist/retry/index.cjs"
    },
    "./circuit-breaker": {
      "bun": "./src/circuit-breaker/index.ts",
      "types": "./dist/circuit-breaker/index.d.ts",
      "import": "./dist/circuit-breaker/index.js",
      "require": "./dist/circuit-breaker/index.cjs"
    },
    "./errors": {
      "bun": "./src/errors/index.ts",
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js",
      "require": "./dist/errors/index.cjs"
    },
    "./core": {
      "bun": "./src/core/index.ts",
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./utils": {
      "bun": "./src/utils/index.ts",
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "bun test",
    "test:node": "node --import tsx --test tests/*.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "rxjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bun-types": "^1.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "rxjs": "^7.8.0"
  },
  "keywords": [
    "http",
    "retry",
    "circuit-breaker",
    "resilience",
    "error-handling",
    "backoff",
    "jitter",
    "exponential-backoff",
    "fetch",
    "axios",
    "got",
    "bun",
    "nodejs",
    "typescript",
    "fault-tolerance"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
